@model List<Product>
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4">Lista de Produtos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>   
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @if(Model!=null && Model.Any())
            {
                foreach(Product prod in Model)
                {
                    <tr>
                        <th scope="row">@prod.Id</th>
                        <td>@prod.Nome</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-primary" asp-route-id="@prod.Id" asp-controller="Product" asp-action="Edit">Editar</a>
                                <a class="btn btn-danger" asp-route-id="@prod.Id" asp-controller="Product" asp-action="DeleteConfirmation">Apagar</a>

                            </div>
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>
</div>

